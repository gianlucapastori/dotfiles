################################################################################
## => OPENBSD CWM CONFIGURATION.
################################################################################

# start from scratch.
unbind-key all
unbind-mouse all

################################################################################
#// general behaviour. 
################################################################################
# automatically add window to current group.
sticky		yes		

# snap to edge at X pixels. 
snapdist	10		

# gap for xclock.
gap 		0 14 0 0

# set font.
fontname	"fixed:pixelsize=13:style=semicondensed"

################################################################################
#// bindings
################################################################################

# CWM general.
bind-key MC-r		restart
bind-key MC-q		quit
bind-key MC-l		lock

bind-key M-d		menu-exec
bind-key MS-d		menu-window

bind-key M-Return       "urxvtc"
bind-key MS-Return      "xterm"

# mouse bindings.
bind-mouse M-1 		window-move
bind-mouse M-3 		window-resize
bind-mouse M-2 		window-close
bind-mouse MS-1 	window-raise
bind-mouse MS-3		window-lower

# window manipulation.
bind-key M-k		window-cycle		
bind-key M-j		window-rcycle

bind-key MS-h		window-resize-left
bind-key MS-j		window-resize-down
bind-key MS-k		window-resize-up
bind-key MS-l		window-resize-right

bind-key MC-h		window-snap-left
bind-key MC-j		window-snap-down
bind-key MC-k		window-snap-up
bind-key MC-l		window-snap-right

# group manipulation.
bind-key M-1		group-only-1
bind-key M-2		group-only-2
bind-key M-3		group-only-3
bind-key M-4		group-only-4

bind-key MS-1		window-movetogroup-1
bind-key MS-2		window-movetogroup-2
bind-key MS-3		window-movetogroup-3
bind-key MS-4		window-movetogroup-4


